<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>

    <!-- 日志文件路径 -->
    <property name="LOG_PATH" value="./${springAppName}/logs"/>

    <!-- 控制台日志格式 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>

    <!-- INFO文件日志格式，包含traceId -->
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [${springAppName},%X{traceId:-},%X{spanId:-}] [%thread] %-5level %logger{50} - %msg%n"/>
    <!-- 控制台 Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- INFO 级别日志文件 Appender -->
    <appender name="FILE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${springAppName}.log</file>
        <!-- 滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 归档文件名格式，%i 是大小滚动触发时的索引 -->
            <fileNamePattern>${LOG_PATH}/${springAppName}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- 日志保留天数 -->
            <maxHistory>360</maxHistory>
            <!-- 单个日志文件的最大大小 -->
            <maxFileSize>1GB</maxFileSize>
            <!-- 所有归档文件的总大小上限 -->
            <totalSizeCap>512GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ERROR 级别日志文件 Appender -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${springAppName}-error.log</file>
        <!-- 滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 归档文件名格式，%i 是大小滚动触发时的索引 -->
            <fileNamePattern>${LOG_PATH}/${springAppName}-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- 日志保留天数 -->
            <maxHistory>360</maxHistory>
            <!-- 单个日志文件的最大大小 -->
            <maxFileSize>1GB</maxFileSize>
            <!-- 所有归档文件的总大小上限 -->
            <totalSizeCap>512GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 过滤器，只记录ERROR级别的日志 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- Root Logger 配置 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_LOG"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- 特定的包日志配置 -->
    <logger name="com.xxx.mapper" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_LOG"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
</configuration>
